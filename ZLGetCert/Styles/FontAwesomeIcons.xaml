<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- Font Awesome Font Families -->
    <FontFamily x:Key="FontAwesomeSolid">pack://application:,,,/Fonts/#Font Awesome 7 Pro Solid</FontFamily>
    <FontFamily x:Key="FontAwesomeRegular">pack://application:,,,/Fonts/#Font Awesome 7 Pro</FontFamily>

    <!-- Icon Unicode Characters (Font Awesome 7.1.0) -->
    
    <!-- Action Icons -->
    <system:String x:Key="Icon.Generate">&#xf013;</system:String> <!-- gear -->
    <system:String x:Key="Icon.Certificate">&#xe0a1;</system:String> <!-- certificate -->
    <system:String x:Key="Icon.Wrench">&#xf0ad;</system:String> <!-- wrench -->
    <system:String x:Key="Icon.Settings">&#xf013;</system:String> <!-- gear -->
    <system:String x:Key="Icon.Save">&#xf0c7;</system:String> <!-- floppy-disk -->
    <system:String x:Key="Icon.Import">&#xf56f;</system:String> <!-- file-import -->
    <system:String x:Key="Icon.Export">&#xf56e;</system:String> <!-- file-export -->
    <system:String x:Key="Icon.Edit">&#xf044;</system:String> <!-- pen-to-square -->
    <system:String x:Key="Icon.Lock">&#xf023;</system:String> <!-- lock -->
    <system:String x:Key="Icon.Shield">&#xf3ed;</system:String> <!-- shield-halved -->
    
    <!-- File & Document Icons -->
    <system:String x:Key="Icon.File">&#xf15b;</system:String> <!-- file -->
    <system:String x:Key="Icon.FileLines">&#xf15c;</system:String> <!-- file-lines -->
    <system:String x:Key="Icon.FolderOpen">&#xf07c;</system:String> <!-- folder-open -->
    
    <!-- UI Control Icons -->
    <system:String x:Key="Icon.Plus">&#x2b;</system:String> <!-- plus -->
    <system:String x:Key="Icon.PlusCircle">&#xf055;</system:String> <!-- circle-plus -->
    <system:String x:Key="Icon.Minus">&#xf068;</system:String> <!-- minus -->
    <system:String x:Key="Icon.Xmark">&#xf00d;</system:String> <!-- xmark -->
    <system:String x:Key="Icon.Check">&#xf00c;</system:String> <!-- check -->
    <system:String x:Key="Icon.CheckCircle">&#xf058;</system:String> <!-- circle-check -->
    <system:String x:Key="Icon.ChevronDown">&#xf078;</system:String> <!-- chevron-down -->
    <system:String x:Key="Icon.ChevronRight">&#xf054;</system:String> <!-- chevron-right -->
    <system:String x:Key="Icon.ChevronUp">&#xf077;</system:String> <!-- chevron-up -->
    
    <!-- Password & Security Icons -->
    <system:String x:Key="Icon.Eye">&#xf06e;</system:String> <!-- eye -->
    <system:String x:Key="Icon.EyeSlash">&#xf070;</system:String> <!-- eye-slash -->
    <system:String x:Key="Icon.Key">&#xf084;</system:String> <!-- key -->
    <system:String x:Key="Icon.Clipboard">&#xf328;</system:String> <!-- clipboard -->
    
    <!-- Status & Notification Icons -->
    <system:String x:Key="Icon.Info">&#xf05a;</system:String> <!-- circle-info -->
    <system:String x:Key="Icon.Warning">&#xf071;</system:String> <!-- triangle-exclamation -->
    <system:String x:Key="Icon.Error">&#xf06a;</system:String> <!-- circle-exclamation -->
    <system:String x:Key="Icon.Success">&#xf058;</system:String> <!-- circle-check -->
    <system:String x:Key="Icon.Question">&#xf059;</system:String> <!-- circle-question -->
    
    <!-- Misc Icons -->
    <system:String x:Key="Icon.List">&#xf03a;</system:String> <!-- list -->
    <system:String x:Key="Icon.Trash">&#xf1f8;</system:String> <!-- trash-can -->
    <system:String x:Key="Icon.Download">&#xf019;</system:String> <!-- download -->
    <system:String x:Key="Icon.Upload">&#xf093;</system:String> <!-- upload -->
    <system:String x:Key="Icon.Copy">&#xf0c5;</system:String> <!-- copy -->
    <system:String x:Key="Icon.Paste">&#xf0ea;</system:String> <!-- paste -->
    <system:String x:Key="Icon.User">&#xf007;</system:String> <!-- user -->
    <system:String x:Key="Icon.Server">&#xf233;</system:String> <!-- server -->
    <system:String x:Key="Icon.Network">&#xf6ff;</system:String> <!-- network-wired -->
    <system:String x:Key="Icon.Globe">&#xf0ac;</system:String> <!-- globe -->
    <system:String x:Key="Icon.Building">&#xf1ad;</system:String> <!-- building -->
    
    <!-- Icon Styles for Buttons and TextBlocks -->
    <Style x:Key="FontAwesomeIconStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontAwesomeSolid}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>
    
    <Style x:Key="FontAwesomeIconLargeStyle" TargetType="TextBlock" BasedOn="{StaticResource FontAwesomeIconStyle}">
        <Setter Property="FontSize" Value="18"/>
    </Style>
    
    <Style x:Key="FontAwesomeIconSmallStyle" TargetType="TextBlock" BasedOn="{StaticResource FontAwesomeIconStyle}">
        <Setter Property="FontSize" Value="12"/>
    </Style>
    
    <!-- Button with Icon Style -->
    <Style x:Key="IconTextButtonStyle" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>

