<UserControl x:Class="ZLGetCert.Views.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="600">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
                <!-- ZentrixLabs Logo -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="10" 
                        Margin="0,0,0,20"
                        HorizontalAlignment="Center">
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" 
                                          Direction="315" 
                                          ShadowDepth="3" 
                                          Opacity="0.3" 
                                          BlurRadius="5"/>
                    </Border.Effect>
                    <Border Background="Black" 
                            CornerRadius="4" 
                            Padding="15">
                        <Image Source="pack://application:,,,/ZLLogo.png" 
                               Width="200" 
                               Height="200" 
                               Stretch="Uniform"/>
                    </Border>
                </Border>
            
            <TextBlock Text="ZLGetCert" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Certificate Management Tool" 
                       FontSize="16" 
                       Foreground="Gray" 
                       HorizontalAlignment="Center" 
                       Margin="0,5,0,0"/>
            <TextBlock Text="by ZentrixLabs" 
                       FontSize="14" 
                       Foreground="DarkBlue" 
                       HorizontalAlignment="Center" 
                       Margin="0,10,0,0"/>
        </StackPanel>
        
        <!-- Content Area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="{Binding VersionText}" FontSize="14" Margin="0,0,0,5"/>
                <TextBlock Text="Developed by ZentrixLabs" FontSize="14" Margin="0,0,0,15"/>
                
                <!-- Description -->
                <TextBlock TextWrapping="Wrap" Margin="0,0,0,20">
                    ZLGetCert is a powerful and easy-to-use desktop application designed to simplify the process of generating and managing SSL/TLS certificates. Whether you need to create certificates from Certificate Signing Requests (CSRs) or generate new certificates directly, ZLGetCert provides a seamless experience with OpenSSL integration.
                    <LineBreak/><LineBreak/>
                    Built with .NET Framework 4.8 and WPF, this application leverages industry-standard OpenSSL tools for robust certificate generation and management. The application provides an intuitive interface for certificate operations with comprehensive logging and configuration management.
                </TextBlock>

                <!-- Key Features -->
                <TextBlock Text="Key Features:" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="• Certificate Generation: Create SSL/TLS certificates from CSRs or generate new certificates directly" TextWrapping="Wrap" Margin="0,0,0,5"/>
                    <TextBlock Text="• OpenSSL Integration: Leverages industry-standard OpenSSL tools for certificate operations" TextWrapping="Wrap" Margin="0,0,0,5"/>
                    <TextBlock Text="• Wildcard Certificate Support: Generate wildcard certificates for subdomain management" TextWrapping="Wrap" Margin="0,0,0,5"/>
                    <TextBlock Text="• SAN Support: Create certificates with Subject Alternative Names (SAN)" TextWrapping="Wrap" Margin="0,0,0,5"/>
                    <TextBlock Text="• Configuration Management: Centralized settings and configuration management" TextWrapping="Wrap" Margin="0,0,0,5"/>
                    <TextBlock Text="• Real-time Logging: Provides detailed logs of all certificate operations" TextWrapping="Wrap" Margin="0,0,0,5"/>
                    <TextBlock Text="• User-friendly Interface: Intuitive WPF interface for certificate management" TextWrapping="Wrap" Margin="0,0,0,5"/>
                    <TextBlock Text="• Secure Operations: Secure handling of private keys and sensitive data" TextWrapping="Wrap" Margin="0,0,0,5"/>
                </StackPanel>

                <!-- Credits Section -->
                <TextBlock Text="Credits &amp; Acknowledgments" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="This application relies on excellent open-source tools:" TextWrapping="Wrap" Margin="0,0,0,10"/>
                    
                    <!-- OpenSSL -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="• " FontWeight="Bold"/>
                        <TextBlock Text="OpenSSL" FontWeight="Bold"/>
                        <TextBlock Text=" - Industry-standard cryptographic library for SSL/TLS operations" Margin="5,0,0,0"/>
                    </StackPanel>
                    <TextBlock Margin="0,0,0,5">
                        <Run Text="    "/>
                        <Hyperlink NavigateUri="https://www.openssl.org/" RequestNavigate="Hyperlink_RequestNavigate">
                            <Run Text="https://www.openssl.org/"/>
                        </Hyperlink>
                    </TextBlock>
                    
                    <!-- .NET Framework -->
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                        <TextBlock Text="• " FontWeight="Bold"/>
                        <TextBlock Text=".NET Framework" FontWeight="Bold"/>
                        <TextBlock Text=" - Microsoft's application framework for Windows applications" Margin="5,0,0,0"/>
                    </StackPanel>
                    <TextBlock Margin="0,0,0,5">
                        <Run Text="    "/>
                        <Hyperlink NavigateUri="https://dotnet.microsoft.com/" RequestNavigate="Hyperlink_RequestNavigate">
                            <Run Text="https://dotnet.microsoft.com/"/>
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>

                <!-- Links Section -->
                <TextBlock Text="Links" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Margin="0,0,0,5">
                        <Run Text="• " FontWeight="Bold"/>
                        <Run Text="Project Repository: " FontWeight="Bold"/>
                        <Hyperlink NavigateUri="https://github.com/ZentrixLabs/ZLGetCert" RequestNavigate="Hyperlink_RequestNavigate">
                            <Run Text="https://github.com/ZentrixLabs/ZLGetCert"/>
                        </Hyperlink>
                    </TextBlock>
                    
                    <TextBlock Margin="0,5,0,0">
                        <Run Text="• " FontWeight="Bold"/>
                        <Run Text="ZentrixLabs Website: " FontWeight="Bold"/>
                        <Hyperlink NavigateUri="https://zentrixlabs.net/" RequestNavigate="Hyperlink_RequestNavigate">
                            <Run Text="https://zentrixlabs.net/"/>
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer -->
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,20,0,0">
            <TextBlock Text="© 2025 ZentrixLabs. All rights reserved." 
                       FontSize="12" 
                       Foreground="Gray" 
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
