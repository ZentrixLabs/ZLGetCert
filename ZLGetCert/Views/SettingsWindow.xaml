<Window x:Class="ZLGetCert.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZLGetCert.Converters"
        mc:Ignorable="d"
        Title="Settings - ZLGetCert" 
        Height="600" 
        Width="700"
        MinHeight="500"
        MinWidth="600"
        WindowStartupLocation="CenterOwner"
        Icon="pack://application:,,,/ZLGetCert_icon_v2.ico">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Margin" Value="0,0,0,10"/>
            </Style>
            
            <Style x:Key="SectionTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Margin" Value="0,15,0,5"/>
            </Style>
            
            <Style x:Key="StatusTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Foreground" Value="Gray"/>
                <Setter Property="Margin" Value="0,5,0,0"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#E9ECEF" BorderThickness="0,0,0,1" Padding="20,15">
            <TextBlock Text="⚙️ Application Settings" Style="{StaticResource HeaderTextStyle}"/>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                
                <!-- File Paths Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="File Paths" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <StackPanel Style="{StaticResource FormGroupStyle}">
                            <TextBlock Text="Certificate Folder" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox Text="{Binding Configuration.FilePaths.CertificateFolder}"
                                     ToolTip="Directory where generated certificates will be saved"/>
                        </StackPanel>
                        
                        <StackPanel Style="{StaticResource FormGroupStyle}">
                            <TextBlock Text="Log Folder" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox Text="{Binding Configuration.FilePaths.LogPath}"
                                     ToolTip="Directory where application logs are stored"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Default Settings Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Default Settings" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <StackPanel Style="{StaticResource FormGroupStyle}">
                            <TextBlock Text="Key Length" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox Text="{Binding Configuration.DefaultSettings.KeyLength}"
                                     ToolTip="Default key length for certificates (2048, 3072, or 4096 bits)"/>
                        </StackPanel>
                        
                        <StackPanel Style="{StaticResource FormGroupStyle}">
                            <TextBlock Text="Hash Algorithm" Style="{StaticResource FieldLabelStyle}"/>
                            <ComboBox SelectedValue="{Binding Configuration.DefaultSettings.HashAlgorithm}" 
                                      ItemsSource="{Binding Configuration.DefaultSettings.AvailableHashAlgorithms}"
                                      ToolTip="Default hash algorithm for certificates"/>
                        </StackPanel>
                        
                        <StackPanel Style="{StaticResource FormGroupStyle}">
                            <CheckBox Content="Require password confirmation" 
                                      IsChecked="{Binding Configuration.DefaultSettings.RequirePasswordConfirmation}"
                                      ToolTip="Require users to confirm their PFX password"/>
                            <CheckBox Content="Auto-cleanup temporary files" 
                                      IsChecked="{Binding Configuration.DefaultSettings.AutoCleanup}"
                                      ToolTip="Automatically remove temporary files after certificate generation"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Logging Settings Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Logging Configuration" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <StackPanel Style="{StaticResource FormGroupStyle}">
                            <TextBlock Text="Log Level" Style="{StaticResource FieldLabelStyle}"/>
                            <ComboBox SelectedValue="{Binding Configuration.Logging.LogLevel}" 
                                      ItemsSource="{Binding Configuration.Logging.AvailableLogLevels}"
                                      ToolTip="Minimum log level to record (Trace, Debug, Information, Warning, Error, Fatal)"/>
                        </StackPanel>
                        
                        <StackPanel Style="{StaticResource FormGroupStyle}">
                            <CheckBox Content="Log to file" 
                                      IsChecked="{Binding Configuration.Logging.LogToFile}"
                                      ToolTip="Write logs to files in the log directory"/>
                            <CheckBox Content="Log to console" 
                                      IsChecked="{Binding Configuration.Logging.LogToConsole}"
                                      ToolTip="Display logs in the console (useful for debugging)"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#F8F9FA" BorderBrush="#E9ECEF" BorderThickness="0,1,0,0" Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="🔄 Reset to Defaults" 
                        Command="{Binding ResetCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="0,0,10,0"/>
                <Button Content="💾 Save &amp; Close" 
                        Command="{Binding SaveAndCloseCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="0,0,10,0"/>
                <Button Content="❌ Cancel" 
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
