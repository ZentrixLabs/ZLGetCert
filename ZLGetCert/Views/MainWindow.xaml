                                                <Setter Property="Foreground" Value="#DC3545"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            
                            <!-- Validation Summary Message -->
                            <TextBlock Text="{Binding CertificateRequest.ValidationSummary}" 
