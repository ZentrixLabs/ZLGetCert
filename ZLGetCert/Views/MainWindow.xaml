                                            Style="{StaticResource IconButtonStyle}"
                                            Width="32"
                                            Height="32"
                                            Margin="0,0,5,0"
                                            ToolTip="Toggle password visibility"/>
                                    
                                    <Button Grid.Column="2" 
                                            Content="ðŸ“‹" 
                                            Command="{Binding CertificateRequest.CopyPasswordCommand}"
