<Window x:Class="ZLGetCert.Views.UsersGuideView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ZLGetCert Users Guide" 
        Height="700" 
        Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Icon="../ZLGetCert_icon_v2.ico">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <Style x:Key="GuideHeaderStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Foreground" Value="#1F2937"/>
                <Setter Property="Margin" Value="0,0,0,20"/>
            </Style>
            
            <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="#374151"/>
                <Setter Property="Margin" Value="0,20,0,10"/>
            </Style>
            
            <Style x:Key="SubSectionHeaderStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="#4B5563"/>
                <Setter Property="Margin" Value="0,15,0,8"/>
            </Style>
            
            <Style x:Key="GuideTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Foreground" Value="#374151"/>
                <Setter Property="Margin" Value="0,5,0,5"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
            </Style>
            
            <Style x:Key="StepTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Foreground" Value="#374151"/>
                <Setter Property="Margin" Value="20,3,0,3"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
            </Style>
            
            <Style x:Key="CodeTextStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Consolas"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Foreground" Value="#1F2937"/>
                <Setter Property="Background" Value="#F3F4F6"/>
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="Margin" Value="0,5,0,5"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
            </Style>
            
            <Style x:Key="WarningBoxStyle" TargetType="Border">
                <Setter Property="Background" Value="#FEF3C7"/>
                <Setter Property="BorderBrush" Value="#F59E0B"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="4"/>
                <Setter Property="Padding" Value="12"/>
                <Setter Property="Margin" Value="0,10,0,10"/>
            </Style>
            
            <Style x:Key="InfoBoxStyle" TargetType="Border">
                <Setter Property="Background" Value="#DBEAFE"/>
                <Setter Property="BorderBrush" Value="#3B82F6"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="4"/>
                <Setter Property="Padding" Value="12"/>
                <Setter Property="Margin" Value="0,10,0,10"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="20,15">
            <StackPanel>
                <TextBlock Text="ðŸ“– ZLGetCert Users Guide" Style="{StaticResource GuideHeaderStyle}"/>
                <TextBlock Text="Complete guide to using ZLGetCert for certificate management" 
                           Style="{StaticResource GuideTextStyle}"/>
            </StackPanel>
        </Border>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="20">
            <StackPanel>
                
                <!-- Getting Started -->
                <TextBlock Text="Getting Started" Style="{StaticResource SectionHeaderStyle}"/>
                <TextBlock Style="{StaticResource GuideTextStyle}" TextWrapping="Wrap">
                    ZLGetCert is a Windows application that simplifies certificate requests from on-premises Certificate Authority (CA) without requiring PowerShell or command-line expertise.
                </TextBlock>
                
                <Border Style="{StaticResource InfoBoxStyle}">
                    <StackPanel>
                        <TextBlock Text="ðŸ’¡ Prerequisites" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock Text="â€¢ Windows Server 2016 or later" Style="{StaticResource StepTextStyle}"/>
                        <TextBlock Text="â€¢ .NET Framework 4.8" Style="{StaticResource StepTextStyle}"/>
                        <TextBlock Text="â€¢ Administrator privileges (for certificate store operations)" Style="{StaticResource StepTextStyle}"/>
                        <TextBlock Text="â€¢ No external dependencies - PEM/KEY export built-in!" Style="{StaticResource StepTextStyle}"/>
                    </StackPanel>
                </Border>
                
                <!-- Configuration -->
                <TextBlock Text="Configuration" Style="{StaticResource SectionHeaderStyle}"/>
                <TextBlock Text="ZLGetCert is ready to use out-of-the-box! CA servers are auto-discovered, but you can optionally customize settings." 
                           Style="{StaticResource GuideTextStyle}"/>
                
                <TextBlock Text="1. Access Settings" Style="{StaticResource SubSectionHeaderStyle}"/>
                <TextBlock Text="Go to Edit â†’ Settings (Ctrl+,) to open the Settings window." 
                           Style="{StaticResource StepTextStyle}"/>
                
                <TextBlock Text="2. Start Generating Certificates" Style="{StaticResource SubSectionHeaderStyle}"/>
                <TextBlock Text="â€¢ CA servers are automatically discovered from Active Directory - just select from the dropdown!" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Select your certificate template (WebServer, CodeSigning, etc.)" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Fill in required fields marked with * - the form adapts based on your template" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Optional: Configure default values in Edit â†’ Settings (Ctrl+,)" Style="{StaticResource StepTextStyle}"/>
                
                <TextBlock Text="3. File Paths" Style="{StaticResource SubSectionHeaderStyle}"/>
                <TextBlock Text="â€¢ Certificate Folder: Where certificates will be saved" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Log Path: Where application logs are stored" Style="{StaticResource StepTextStyle}"/>
                
                <TextBlock Text="4. PEM/KEY Export" Style="{StaticResource SubSectionHeaderStyle}"/>
                <TextBlock Text="â€¢ Built-in .NET cryptography - no external tools required" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Export PEM and KEY files for Apache, NGINX, HAProxy" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Extract CA certificate chains automatically" Style="{StaticResource StepTextStyle}"/>
                
                <!-- Certificate Workflows -->
                <TextBlock Text="Certificate Workflows" Style="{StaticResource SectionHeaderStyle}"/>
                <TextBlock Text="ZLGetCert uses a template-driven approach that automatically configures certificate types based on your template selection. Fields marked with * are required." 
                           Style="{StaticResource GuideTextStyle}"/>
                
                <Border Style="{StaticResource InfoBoxStyle}">
                    <StackPanel>
                        <TextBlock Text="ðŸ’¡ Template-Driven Design" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock Text="Simply select your certificate template - the app automatically shows only relevant fields:" Style="{StaticResource StepTextStyle}"/>
                        <TextBlock Text="â€¢ WebServer template â†’ Shows hostname, SANs, wildcard option" Style="{StaticResource StepTextStyle}"/>
                        <TextBlock Text="â€¢ CodeSigning template â†’ Shows only organization info (no hostname needed)" Style="{StaticResource StepTextStyle}"/>
                        <TextBlock Text="â€¢ CSR import â†’ Only CA server, template, and password needed" Style="{StaticResource StepTextStyle}"/>
                    </StackPanel>
                </Border>
                
                <TextBlock Text="Standard Web Server Certificate" Style="{StaticResource SubSectionHeaderStyle}"/>
                <TextBlock Text="For SSL/TLS certificates for web servers (Apache, IIS, NGINX)." 
                           Style="{StaticResource GuideTextStyle}"/>
                <TextBlock Text="1. Select CA Server * from the dropdown (or type a custom server)" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="2. Select Certificate Template * (e.g., WebServer, WebServerV2)" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="3. Enter Hostname * (e.g., www, api, mail - without the domain)" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="4. The FQDN is auto-generated (e.g., api.company.com)" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="5. Fill in organization details: Location *, State *, Organization *, OU *" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="6. Add additional DNS names or IP addresses as SANs (click âž• Add)" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="7. Set a strong PFX Password * and confirm it" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="8. Optional: Check 'Extract PEM and KEY files' for web servers" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="9. Click 'Generate Certificate' (Alt+G)" Style="{StaticResource StepTextStyle}"/>
                
                <TextBlock Text="Wildcard Certificate" Style="{StaticResource SubSectionHeaderStyle}"/>
                <TextBlock Text="For securing multiple subdomains with a single certificate (*.domain.com)." 
                           Style="{StaticResource GuideTextStyle}"/>
                <TextBlock Text="1. Select CA Server * and Certificate Template * (must be WebServer type)" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="2. Check the 'Wildcard Certificate (*.domain.com)' checkbox" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="3. Hostname field is disabled (not needed for wildcards)" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="4. FQDN auto-updates to *.company.com format" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="5. Fill in organization details: Location *, State *, Organization *, OU *" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="6. Set a strong PFX Password * and confirm it" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="7. Click 'Generate Certificate' (Alt+G)" Style="{StaticResource StepTextStyle}"/>
                
                <TextBlock Text="Import and Sign CSR File" Style="{StaticResource SubSectionHeaderStyle}"/>
                <TextBlock Text="For submitting existing Certificate Signing Request files (from Linux, Java, etc.)." 
                           Style="{StaticResource GuideTextStyle}"/>
                <TextBlock Text="1. Click 'Import from CSR File...' button (Alt+I)" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="2. Browse to select your .csr file" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="3. The CSR file path is shown with a âœ… confirmation" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="4. Organization and hostname fields are hidden (already in CSR)" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="5. Select CA Server * and Certificate Template *" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="6. Set a strong PFX Password * and confirm it" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="7. Click 'Generate Certificate' to submit CSR to CA" Style="{StaticResource StepTextStyle}"/>
                
                <TextBlock Text="Code Signing Certificate" Style="{StaticResource SubSectionHeaderStyle}"/>
                <TextBlock Text="For signing applications, scripts, and executables." 
                           Style="{StaticResource GuideTextStyle}"/>
                <TextBlock Text="1. Select CA Server * and CodeSigning template" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="2. Hostname and wildcard fields are automatically hidden (not applicable)" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="3. Fill in organization details: Location *, State *, Organization *, OU *" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="4. Set a strong PFX Password * and confirm it" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="5. Click 'Generate Certificate'" Style="{StaticResource StepTextStyle}"/>
                
                <!-- Understanding Form Fields -->
                <TextBlock Text="Understanding Form Fields" Style="{StaticResource SectionHeaderStyle}"/>
                <TextBlock Text="Required fields are marked with * and must be filled before generating a certificate." 
                           Style="{StaticResource GuideTextStyle}"/>
                
                <TextBlock Text="CA Server * - Your Certificate Authority server name or IP address" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="Certificate Template * - Determines certificate type and usage (e.g., WebServer, CodeSigning)" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="Hostname * - Server name without domain (e.g., www, api, mail)" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="FQDN - Auto-generated full domain name (e.g., api.company.com)" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="Location * - City name (e.g., Seattle, New York, London)" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="State * - Two-letter state/province code (e.g., WA, CA, NY, TX)" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="Organization * - Your organization's domain name (e.g., company.com)" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="Organizational Unit * - Department or division (e.g., IT, Engineering)" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="PFX Password * - Strong password to protect the certificate file" Style="{StaticResource StepTextStyle}"/>
                
                <Border Style="{StaticResource InfoBoxStyle}">
                    <StackPanel>
                        <TextBlock Text="ðŸ’¡ Field Visibility" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock Text="The form adapts based on your selections:" Style="{StaticResource StepTextStyle}"/>
                        <TextBlock Text="â€¢ Web server templates show hostname and SAN fields" Style="{StaticResource StepTextStyle}"/>
                        <TextBlock Text="â€¢ Code signing templates hide hostname fields (not needed)" Style="{StaticResource StepTextStyle}"/>
                        <TextBlock Text="â€¢ CSR import hides organization fields (already in CSR)" Style="{StaticResource StepTextStyle}"/>
                        <TextBlock Text="â€¢ Wildcard checkbox only appears for web server templates" Style="{StaticResource StepTextStyle}"/>
                    </StackPanel>
                </Border>
                
                <!-- Password Requirements -->
                <TextBlock Text="Password Requirements" Style="{StaticResource SectionHeaderStyle}"/>
                <TextBlock Text="PFX passwords must meet these requirements:" 
                           Style="{StaticResource GuideTextStyle}"/>
                
                <TextBlock Text="â€¢ Minimum 8 characters" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ At least one uppercase letter (A-Z)" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ At least one lowercase letter (a-z)" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ At least one number (0-9)" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Password strength indicator shows Weak/Medium/Strong as you type" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Use the ðŸ‘ button to toggle password visibility" Style="{StaticResource StepTextStyle}"/>
                
                <!-- Security Settings -->
                <TextBlock Text="Application Settings" Style="{StaticResource SectionHeaderStyle}"/>
                <TextBlock Text="Configure global options in the Settings window (Edit â†’ Settings or Ctrl+,):" 
                           Style="{StaticResource GuideTextStyle}"/>
                
                <TextBlock Text="â€¢ Key Length: Choose 2048, 3072, or 4096 bits (default: 2048)" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Hash Algorithm: Select SHA-256, SHA-384, or SHA-512 (default: SHA-256)" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Password Confirmation: Require password confirmation for security" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Auto-cleanup: Automatically remove temporary files" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Certificate Folder: Where generated certificates are saved" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Log Path: Location for application logs" Style="{StaticResource StepTextStyle}"/>
                
                <!-- PEM/KEY Export for Web Servers -->
                <TextBlock Text="PEM/KEY Export for Web Servers" Style="{StaticResource SectionHeaderStyle}"/>
                <TextBlock Text="ZLGetCert includes built-in PEM and KEY file extraction using pure .NET cryptography - no external tools required!" 
                           Style="{StaticResource GuideTextStyle}"/>
                
                <TextBlock Text="â€¢ Check 'Extract PEM and KEY files' when generating web server certificates" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ The .pem file contains your certificate (public key)" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ The .key file contains your private key (unencrypted, as required by web servers)" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Optionally check 'Extract CA bundle' to get intermediate/root certificates" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Compatible with Apache, NGINX, HAProxy, and all web servers" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Works in air-gapped and restricted OT environments" Style="{StaticResource StepTextStyle}"/>
                
                <Border Style="{StaticResource WarningBoxStyle}">
                    <StackPanel>
                        <TextBlock Text="âš ï¸ Security Notice" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock Text="The .key file is unencrypted (required by web servers). Security protections:" Style="{StaticResource StepTextStyle}"/>
                        <TextBlock Text="â€¢ File permissions automatically set to owner-only" Style="{StaticResource StepTextStyle}"/>
                        <TextBlock Text="â€¢ All exports logged to audit trail" Style="{StaticResource StepTextStyle}"/>
                        <TextBlock Text="â€¢ Use encrypted transfer methods (SFTP/SCP) to copy to servers" Style="{StaticResource StepTextStyle}"/>
                        <TextBlock Text="â€¢ Verify permissions on destination (chmod 600)" Style="{StaticResource StepTextStyle}"/>
                        <TextBlock Text="â€¢ Securely delete local copy after deployment" Style="{StaticResource StepTextStyle}"/>
                    </StackPanel>
                </Border>
                
                
                <!-- Tips and Best Practices -->
                <TextBlock Text="Tips and Best Practices" Style="{StaticResource SectionHeaderStyle}"/>
                
                <TextBlock Text="Using the Form Efficiently" Style="{StaticResource SubSectionHeaderStyle}"/>
                <TextBlock Text="â€¢ Required fields (marked with *) must be filled before generating" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Hover over any field to see tooltips with examples" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ The Generate Certificate button is prominent and enlarged for easy access" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Use keyboard shortcuts (Alt+G to generate, Alt+I to import CSR)" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Click 'â“ Click Here for Help' at any time to open this guide" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ The form adapts - only relevant fields are shown based on template selection" Style="{StaticResource StepTextStyle}"/>
                
                <TextBlock Text="Template Selection" Style="{StaticResource SubSectionHeaderStyle}"/>
                <TextBlock Text="â€¢ Choose templates you know - contact your CA administrator if unsure" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ WebServer templates automatically show hostname and SANs fields" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ CodeSigning templates hide hostname (not needed)" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ You can type custom template names if not in the dropdown" Style="{StaticResource StepTextStyle}"/>
                
                <TextBlock Text="Password Best Practices" Style="{StaticResource SubSectionHeaderStyle}"/>
                <TextBlock Text="â€¢ Use unique passwords for each certificate" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Watch the strength indicator - aim for 'Strong'" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Store passwords in a password manager" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Use the ðŸ‘ button to verify password before confirming" Style="{StaticResource StepTextStyle}"/>
                
                <!-- Troubleshooting -->
                <TextBlock Text="Troubleshooting" Style="{StaticResource SectionHeaderStyle}"/>
                
                <TextBlock Text="Common Issues" Style="{StaticResource SubSectionHeaderStyle}"/>
                <TextBlock Text="â€¢ Cannot click Generate: Check all required (*) fields are filled" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Certificate generation fails: Check CA server connectivity and credentials" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ PEM/KEY export fails: Ensure write permissions to output folder" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Permission errors: Run as Administrator" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Invalid configuration: Use Configuration Editor to validate JSON" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Hostname field disabled: You have wildcard checked (wildcards don't need hostname)" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Missing fields: Select a template first - fields appear based on template type" Style="{StaticResource StepTextStyle}"/>
                
                <TextBlock Text="Configuration Issues" Style="{StaticResource SubSectionHeaderStyle}"/>
                <TextBlock Text="If you encounter configuration issues:" 
                           Style="{StaticResource GuideTextStyle}"/>
                
                <TextBlock Text="1. Open Configuration Editor (Edit â†’ Configuration Editor...)" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="2. Check the validation status indicator:" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="   - Red status: Fix JSON syntax errors first" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="   - Yellow status: Address missing or invalid configuration values" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="   - Green status: Configuration is valid and ready to use" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="3. Review error details for specific issues to fix" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="4. Test changes before applying to production" Style="{StaticResource StepTextStyle}"/>
                
                <TextBlock Text="Log Files" Style="{StaticResource SubSectionHeaderStyle}"/>
                <TextBlock Text="Check the log files in the configured log path for detailed error information:" 
                           Style="{StaticResource GuideTextStyle}"/>
                <TextBlock Text="Default location: C:\ProgramData\ZentrixLabs\ZLGetCert" 
                           Style="{StaticResource CodeTextStyle}"/>
                
                <TextBlock Text="Support" Style="{StaticResource SubSectionHeaderStyle}"/>
                <TextBlock Text="â€¢ Check the logs for detailed error information" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Review the configuration in appsettings.json" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Create an issue in the GitHub repository" Style="{StaticResource StepTextStyle}"/>
                
                <!-- Getting Help -->
                <TextBlock Text="Getting Help" Style="{StaticResource SectionHeaderStyle}"/>
                <TextBlock Text="ZLGetCert provides multiple ways to get help:" 
                           Style="{StaticResource GuideTextStyle}"/>
                
                <TextBlock Text="â€¢ Click 'â“ Need Help?' link at the top-right of the form" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Hover over any field to see detailed tooltips with examples" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Press F1 or go to Help â†’ Users Guide" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ All required fields are marked with * asterisks" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Field labels show examples (e.g., 'State: Examples: WA, CA, NY')" Style="{StaticResource StepTextStyle}"/>
                
                <!-- Keyboard Shortcuts -->
                <TextBlock Text="Keyboard Shortcuts" Style="{StaticResource SectionHeaderStyle}"/>
                
                <TextBlock Text="Main Window" Style="{StaticResource SubSectionHeaderStyle}"/>
                <TextBlock Text="â€¢ Alt+G: Generate Certificate (primary action)" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Alt+I: Import from CSR File" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Alt+D: Save current settings as Defaults" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Ctrl+N: New Certificate (clear form)" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Ctrl+,: Open Settings panel" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ F1: Open this Users Guide" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Alt+F4: Exit application" Style="{StaticResource StepTextStyle}"/>
                
                <TextBlock Text="Configuration Editor" Style="{StaticResource SubSectionHeaderStyle}"/>
                <TextBlock Text="â€¢ Ctrl+S: Save configuration to file" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Ctrl+O: Load configuration from file" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ Ctrl+Z: Undo changes (if supported by editor)" Style="{StaticResource StepTextStyle}"/>
                <TextBlock Text="â€¢ F5: Refresh validation status" Style="{StaticResource StepTextStyle}"/>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#F8F9FA" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0" Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="ðŸ“– Print Guide" 
                        Command="{Binding PrintGuideCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"/>
                <Button Content="âŒ Close" 
                        Command="{Binding CloseCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
